{
    "manifest_version": 2,
    "name": "KKU Container",
    "version": "1.5.3",

    "description": "KKU Container isolates your KKU activity from the rest of your web activity in order to prevent KKU from tracking you outside of the KKU website via third party cookies.",

    "icons": {
        "48": "icon.png",
        "96": "icon@2x.png"
    },

    "applications": {
      "gecko": {
        "id": "@contain-KKU",
        "strict_min_version": "57.0"
      }
    },

    "homepage_url": "https://github.com/wannaphong/contain-KKU",

    "permissions": [
        "<all_urls>",
        "contextualIdentities",
        "cookies",
        "management",
        "tabs",
        "webRequestBlocking",
        "webRequest",
        "storage"
    ],

    "background": {
        "scripts": ["background.js"]
    },
    
    "options_ui": {
        "page": "options.html",
        "browser_style": true
    }
}
